client.background       #ffffff

# Brightness
bindsym XF86MonBrightnessDown exec light -U 5
bindsym XF86MonBrightnessUp exec light -A 5


# Volume controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@  +5%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

gaps inner 10
gaps outer 5

# startup apps
exec mpd
# exec blueman-applet
exec mako

# turn on bluetooth ctl
exec bluetoothctl power on

# turn on wlsunset - color temperature setter for Wayland
# exec wlsunset -l 53.59 -L 9.93 -g 0.8

# exec_always for laptop clamshell mode
exec_always ~/.config/sway/clam_shell_mode.sh

# Shutdown, Reboot, Lock Screen, and Logout 

set $power_mode " power"
bindsym $mod+Shift+p      mode $power_mode
mode $power_mode {
    bindsym p         exec systemctl poweroff
    bindsym r         exec systemctl reboot 
    bindsym l         exec swaylock, mode "default"
    bindsym q         exec --no-startup-id i3-msg exit, mode "default"
    bindsym h         exec systemctl hibernate 
    #bindsym s        exec sudo  /lib/systemd/systemd-sleep hybrid-sleep 
    bindsym s         exec pm-suspend

    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

set $application_mode " applications" 
mode $application_mode {
  bindsym f exec firefox; mode "default"
  bindsym i exec _JAVA_AWT_WM_NONREPARENTING=1 ~/bin/idea; mode "default"
  bindsym c exec code; mode "default"
  bindsym g exec google-chrome-stable; mode "default"

  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+Shift+a mode $application_mode


# GTK3 theme
set $gnome-schema org.gnome.desktop.interface

#set $opacity 0.9
#for_window [class=".*"] opacity $opacity
#for_window [app_id=".*"] opacity $opacity

exec_always {
    gsettings set $gnome-schema gtk-theme 'Adwaita-dark'
    gsettings set $gnome-schema icon-theme 'Adwaita'
    gsettings set $gnome-schema cursor-theme 'Adwaita'
    gsettings set $gnome-schema font-name 'Cantarell Regular'
}


include /etc/sway/config.d/*
include ~/.config/sway/gruvbox.config
